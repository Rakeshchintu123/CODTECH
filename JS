const http = require('http');

const server = http.createServer((req, res) => {
  res.end("Hello from CI/CD Pipeline!");
});

server.listen(3000);
{
  "name": "ci-cd-example",
  "version": "1.0.0",
  "scripts": {
    "start": "node app.js",
    "test": "echo \"No tests yet\" && exit 0"
  }
}
name: CI/CD Pipeline

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout Code
        uses: actions/checkout@v4

      - name: Set up Node.js
        uses: actions/setup-node@v4
        with:
          node-version: 18

      - name: Install Dependencies
        run: npm install

      - name: Run Tests
        run: npm test

      - name: Deploy (example)
        if: github.ref == 'refs/heads/main'
        run: |
          echo "âœ… Deployment would happen here (e.g. SCP, SSH, FTP, or use a service like Render)"
